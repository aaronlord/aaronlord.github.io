---
import { type CollectionEntry, getCollection } from 'astro:content';
const { project } = Astro.props as { project: CollectionEntry<'projects'> };
const { Content } = await project.render();
---
<div class="mt-6">
    <div class="flex content-center justify-between mt-12 mb-3">
        <h3 class="flex-none m-0 text-xl font-bold leading-loose text-gray-900 font-display">
            {project.data.title}
        </h3>

        <div class="tags flex-none">
            {project.data.tags.map((tag) => (
                <span class="inline-block px-2 py-1 ml-2 uppercase text-[0.5rem] font-semibold text-gray-700 bg-gray-200 rounded">
                    {tag}
                </span>
            ))}
        </div>
    </div>

    <div class="mt-3 mb-2 prose">
        <Content />
    </div>
</div>
